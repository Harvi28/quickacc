<?xml version="1.0" encoding="utf-8"?>
<form
				addrulepath="/administrator/components/com_test/models/rules"
>	<fieldset>
		<field
			name="id"
			type="hidden"
			

		/>

		<field
				name="title"
				type="text"
				label="COM_PRODUCT_PRODUCT_TITLE_LABEL"
				description="COM_PRODUCT_PRODUCT_TITLE_DESC"
				size="40"
				class="inputbox"
				default=""
				required="true"

		/>


		<field 	name="published" 
				type="list" 
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC" 
				class="chzn-color-state"
				required="true"
				filter="intval" 	
				size="1" 
				default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>
		<field
			name="image"
			type="file"
			label="COM_PRODUCT_PRODUCT_IMAGE_LABEL"
			description="COM_PRODUCT_PRODUCT_IMAGE_DESC"
			size="40"

		/>
		
		<field
			name="quantity"
			type="int"
			label="COM_PRODUCT_PRODUCT_QUANTITY_LABEL"
			description="COM_PRODUCT_PRODUCT_QUANTITY_DESC"
			required="true"
			/>

		<field
			name="short_desc"
			type="text"
			label="COM_PRODUCT_PRODUCT_SHORT_DESC_LABEL"
			description="COM_PRODUCT_PRODUCT_SHORT_DESC_DESC"
			/>
		<field
			name="des"
			type="text"
			label="COM_PRODUCT_PRODUCT_DES_LABEL"
			description="COM_PRODUCT_PRODUCT_DES_DESC"

			/>
	</fieldset>
</form>